<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectPathway">

    <TextView
        android:id="@+id/tvDetailPathway"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/wintecBasicBackground"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="Select Pathway"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/wintecBasicBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cvSoftware"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/wintecBasicBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/wintecBasicBackground"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@mipmap/icon_software"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/wintecBasicBlack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/wintecBasicBackground"
                        android:text="Software Engineering"
                        android:textColor="@color/wintecBasicBlack"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvDatabase"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="220dp"
                app:cardBackgroundColor="@color/wintecBasicBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/wintecBasicBackground"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@mipmap/icon_database"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/wintecBasicBlack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/wintecBasicBackground"
                        android:text="Database Architecture"
                        android:textColor="@color/wintecBasicBlack"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cvNetworking"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/wintecBasicBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/wintecBasicBackground"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@mipmap/icon_networking"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/wintecBasicBlack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/wintecBasicBackground"
                        android:text="Networking"
                        android:textColor="@color/wintecBasicBlack"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvWebDevelopment"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="220dp"
                app:cardBackgroundColor="@color/wintecBasicBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/wintecBasicBackground"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@mipmap/icon_web_development"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/wintecBasicBlack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/wintecBasicBackground"
                        android:text="Multi Media    Web Development"
                        android:textColor="@color/wintecBasicBlack"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>