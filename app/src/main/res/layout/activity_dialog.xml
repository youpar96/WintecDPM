<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textSize="17dp"
                android:text="The DPM App is a Prototype version of a degree planner only and NOT an official study plan. It is intended that students
    shall use this to get an understanding of the pathways offered and then discuss study plans with a Wintec representative.
    Pathways may change accordingly making older versions redundant â€“ Wintec takes no responsibility of outdated pathways
    or information displayed on the app."
                />

            <Button
                android:id="@+id/btnDialogOk"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:textColor="@color/wintecBasicBlack"
                android:text="OK"/>


        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>