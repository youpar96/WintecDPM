<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SelectPathwayFragment"
    tools:showIn="@layout/app_bar_select_pathway">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SelectPathway">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cvSoftware"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="@color/wintecBasicBackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/wintecBasicBackground"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@mipmap/icon_software"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/wintecBasicBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/wintecBasicBackground"
                            android:text="Software Engineering"
                            android:textColor="@color/wintecBasicBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvDatabase"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/wintecBasicBackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/wintecBasicBackground"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@mipmap/icon_database"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/wintecBasicBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/wintecBasicBackground"
                            android:text="Database Architecture"
                            android:textColor="@color/wintecBasicBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cvNetworking"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="@color/wintecBasicBackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/wintecBasicBackground"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@mipmap/icon_networking"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/wintecBasicBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/wintecBasicBackground"
                            android:text="Networking"
                            android:textColor="@color/wintecBasicBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvWebDevelopment"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/wintecBasicBackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/wintecBasicBackground"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@mipmap/icon_web_development"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/wintecBasicBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/wintecBasicBackground"
                            android:text="Multi Media\nWeb Development"
                            android:textColor="@color/wintecBasicBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>